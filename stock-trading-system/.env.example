# ========================================
# Stock Trading System - Environment Variables Template
# ========================================
# 이 파일을 복사하여 사용하세요:
# - 개발 환경: .env.development
# - 운영 환경: .env.production
# ========================================

# ========================================
# Environment
# ========================================
ENVIRONMENT=development

# ========================================
# Database (PostgreSQL/TimescaleDB)
# ========================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=stocktrading
DB_USER=admin
DB_PASSWORD=admin123

# ========================================
# Redis
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# InfluxDB
# ========================================
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=stocktrading
INFLUXDB_BUCKET=metrics

# ========================================
# Application URLs
# ========================================
BACKEND_URL=http://localhost:8000
BACKEND_PORT=8000
FRONTEND_URL=http://localhost:8080
GRAFANA_URL=http://localhost:3000
AIRFLOW_URL=http://localhost:8080

# ========================================
# Security
# ========================================
# IMPORTANT: 운영 환경에서는 강력한 랜덤 키 생성 필요
# 생성 방법: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# ========================================
# External APIs (Optional)
# ========================================
YAHOO_FINANCE_API_KEY=

# ========================================
# Celery
# ========================================
# 아래 값들은 자동 생성되므로 수정 불필요
# CELERY_BROKER_URL은 redis://${REDIS_HOST}:${REDIS_PORT}/0 형태로 자동 생성
# CELERY_RESULT_BACKEND도 동일

# ========================================
# Logging
# ========================================
LOG_LEVEL=INFO
